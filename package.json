{
  "name": "create-nm",
  "version": "1.0.0",
  "description": "`npm init nm` to create a npm module.",
  "main": "index.js",
  "bin": {
    "create-nm": "bin/cli.js",
    "nm": "bin/cli.js"
  },
  "files": [
    "bin",
    "template",
    "saofile.js"
  ],
  "scripts": {
    "lint": "eslint --fix .",
    "test": "npm run lint && ava --verbose test",
    "test:snapshot": "ava --verbose --update-snapshots test",
    "ci": "npm run lint && nyc --reporter=lcov --reporter=text ava test",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add .",
    "init-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog",
    "prepublishOnly": "np --yolo --no-publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarmotHQ/create-nm.git"
  },
  "author": "Yuheng Zhang <zhangyuheng91@gmail.com> (http://zyhack.cn)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarmotHQ/create-nm/issues"
  },
  "homepage": "https://github.com/MarmotHQ/create-nm#readme",
  "dependencies": {
    "cac": "^6.4.2",
    "sao": "^1.6.1",
    "update-notifier": "^2.5.0"
  },
  "devDependencies": {
    "ava": "^1.2.0",
    "conventional-changelog": "^3.0.5",
    "eslint": "^5.12.1",
    "eslint-config-antife": "^2.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "np": "^4.0.2",
    "nyc": "^13.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8"
  }
}
